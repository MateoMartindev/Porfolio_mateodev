---
export interface Props{
    title: string
    description: string
    time: string
    company: string
}
const {title, description, time, company} = Astro.props
---


    
        <div class="md:col-span-2 md:gap-10 md:m-x-4">
            <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 left-[-22.2px]   border border-white dark:border-gray-900 dark:bg-gray-700"></div>
            <time class="mb-1 text-sm font-normal leading-none text-white/80  ">{time}</time>
            <h3 class="text-2xl font-semibold text-blue-300/100 mt-2">{title}<div class="flex gap-x-2 text-white text-lg"><p>@</p><p>{company}</p></div></h3>
            
        </div>
        <div class="md:col-span-3 md:gap-10 md:m-x-4">
            <p class="mb-4 text-base font-normal text-gray-200 text-pretty">{description}</p>
            </div>



