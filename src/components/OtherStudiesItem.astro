---
export interface Props{
    title: string
    company: string
}
const {title, company} = Astro.props
---







<ul class="max-w-md space-y-1 text-gray-500 list-inside dark:text-gray-400">
    <li class="flex items-start mb-4">
        <!-- Columna para el SVG -->
        <div class="flex-shrink-0">
            <svg class="mt-1.5 w-3.5 h-3.5 text-[#28cfba] dark:text-green-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
            </svg>
        </div>
        <!-- Columna para el título y la compañía -->
        <div class="flex flex-col ml-2 items-start">
            <h2 class="text-lg font-semibold text-white dark:text-white">{title}</h2>
            <p class="text-blue-300/100 dark:text-gray-400">{company}</p>
        </div>
    </li>
</ul>