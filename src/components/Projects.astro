---
import HtmlIcon from './icons/HtmlIcon.astro'
import CssIcon from './icons/CssIcon.astro'
import ReactIcon from './icons/ReactIcon.astro'
import WordpressIcon from './icons/WordpressIcon.astro';
import TailwindIcon from './icons/TailwindIcon.astro';
import JavaScriptIcon from './icons/JavaScriptIcon.astro';

import ProjectsBttnGit from './ProjectsBttnGit.astro';
import ProjectsBttnLink from './ProjectsBttnLink.astro';


const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-transparent  tex-[#ff5225]",
        icon: HtmlIcon
            
    },
    CSS: {
        name: "CSS",
        class: "bg-transparent tex-[#0870c2]",
        icon: CssIcon
    },
    REACT: {
        name: "REACT",
        class: "bg-transparent tex-[#5ecbf1] ",
        icon: ReactIcon            
    },
    TAILWIND: {
        name: "JAVASCRIPT",
        class: "bg-transparent tex-[#5ecbf1] ",
        icon: TailwindIcon            
    },
    JAVASCRIPT: {
        name: "JAVASCRIPT",
        class: "bg-transparent tex-[#5ecbf1] ",
        icon: JavaScriptIcon            
    },
    WORDPRESS: {
        name: "WORDPRESS",
        class: "bg-transparent tex-[#5ecbf1] ",
        icon: WordpressIcon            
    },
    
};

const PROJECTS = [
    {
        title: "Spotify Main Screen Layout - April 2024",
        description:
            "Maquetización de la pantalla principal de Spotify de abril 2024 utilizando componentes de React. Se enfocó en la estructura principal y solo en la interfaz de usuario.",
        link: "",
        github: "https://github.com/MateoMartindev/Spotify-components-react",
        image: "/projects/sptreact.webp",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.REACT],
    },
    {
        title: "Gemeksas.co - Landing Page",
        description:
            "Desarrollo de la landing page para el sitio web gemeksas.co utilizando WordPress y JavaScript para implementar funcionalidades específicas.",
        link: "https://gemeksas.co",
        github: "",
        image: "/projects/gemekproject.webp",
        tags: [TAGS.WORDPRESS, TAGS.JAVASCRIPT],
    },
    {
        title: "Triqui - Juego de turnos",
        description:
            "Implementación del juego Triqui (Tic Tac Toe) en el que dos jugadores alternan turnos para marcar casillas en un tablero de 3x3.",
        link: "",
        github: "https://github.com/MateoMartindev/02-triqui",
        image: "/projects/triqui.webp",
        tags: [TAGS.JAVASCRIPT, TAGS.HTML, TAGS.CSS],
    },
    {
        title: "Sitio web Grid",
        description:
            "Desarrollo de un sitio web con un diseño principal basado en un grid de 4 imágenes, utilizado como menú para acceder a diferentes secciones que muestran diversos usos de CSS Grid y Flexbox.",
        link: "",
        github: "https://github.com/MateoMartindev/Sitio-Web-Grid",
        image: "/projects/sitiogrid.webp",
        tags: [TAGS.HTML, TAGS.CSS],
    },
    
];

---

{
    PROJECTS.map(({ title, image, description, tags, link, github}) => (
        <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0 mb-20">
            <div class="w-full md:w-1/2 flex items-center">
                <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                    <img
                        class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-100 md:group-hover:scale-110 rounded shadow-2xl shadow-white/10"
                        src={image}
                        alt={`Captura pantalla del proyecto ${image}`}
                    />
                </div>
            </div>
            <div class="w-full md:w-1/2 md:max-w-lg">
                <h3 class="text-2xl font-semibold text-blue-300/100 mb-2">
                    {title}
                </h3>
                <ul  class="flex gap-x-2 flex-row mb-2">
                    {tags.map((tag) => (
                        <li>
                            <span class={
                                `flex gap-x-2 rounded-full text-zs ${tag.class} py-1 px-3 backdrop-filter backdrop-blur-md border border-solid border-white/10 transition hover:scale-110 hover:bg-white/10 cursor-pointer text-sm`}>
                                <tag.icon class="size-4"/> {tag.name}</li>
                            </span>
                    ))}
                </ul>
                <p class="text-lg mb-4 text-pretty">{description}</p>
                
                <footer class="flex items-end justify-start mt-4 gap-x-4">
                    {github && (
                    <ProjectsBttnGit 
                    href={github}
                    />)}
                    {link && (
                    <ProjectsBttnLink 
                    href={link}
                    />)}

                </footer>
                
            </div>
        </article>
    ))
}
