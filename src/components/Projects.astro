---
import HtmlIcon from './icons/HtmlIcon.astro'
import CssIcon from './icons/CssIcon.astro'
import ReactIcon from './icons/ReactIcon.astro'

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-black tex-[#ff5225]",
        icon: HtmlIcon
            
    },
    CSS: {
        name: "CSS",
        class: "bg-white tex-[#0870c2]",
        icon: CssIcon
    },
    REACT: {
        name: "REACT",
        class: "bg-white tex-[#5ecbf1]",
        icon: ReactIcon            
    },
};

const PROJECTS = [
    {
        title: "Spotify maquetizaciÃ³n",
        description:
            "This is a description of Project One. It includes details about the project, its purpose, and how it was built.",
        link: "https://example.com/project-one",
        github: "https://github.com/username/project-one",
        image: "/projects/sptreact.webp",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.REACT],
    },
];
---

{
    PROJECTS.map(({ title, image, description, tags }) => (
        <article>
            <h3 class="text-2xl font-semibold text-blue-300/100 mb-2">
                {title}
            </h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul  class="flex gap-x-2 flex-row">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-zs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-6"/> {tag.name}</li>
                        </span>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10"
                src={image}
                alt={`Captura pantalla del proyyecto ${image}`}
            />
        </article>
    ))
}
